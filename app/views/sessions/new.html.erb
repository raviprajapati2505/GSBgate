<div class="loginColumns">
    GSAS Projects Certifications | Register/Manage a Project
    <div class="row">
        <div class="col-md-6 login-left">
            <%= image_tag 'layout/gsas_trust_logo.png', class: 'logo' %>
        </div>
        <div class="col-md-6 login-right">
            <div class="title">
                <h2>Login to GSASgate</h2>
            </div>
            <div class="form">
                <%= bootstrap_form_for(User.new, url: sessions_path) do |f| %>
                    <%= f.text_field :username, autofocus: true, placeholder: 'Username', hide_label: true %>
                    <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', hide_label: true %>
                    <%= btn_tag(text: 'Login', class: 'block full-width m-b') %>
                <% end %>
            </div>
            <div class="links">
                <%= link_to 'Create a LinkMe account', 'http://www.linkme.qa/general/register_start.asp', target: '_blank' %>
                <br/>
                <%= link_to 'Forgot LinkMe username or password?', 'http://www.linkme.qa/general/email_pass.asp', target: '_blank' %>
            </div>
        </div>
    </div>
</div>
</div>