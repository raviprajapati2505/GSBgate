<%= bootstrap_form_for @user do |f| %>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5><%=t '.form_title' %></h5>
                </div>
                <div class="ibox-content">
                    <%= f.text_field :email, disabled: 'disabled' %>
                    <%= f.select :role, User.roles.keys.map { |k| [k.humanize, k] } %>
                    <%= f.primary t('.btn_save') %>
                    <%= link_to t('.btn_cancel'), users_path, class: 'btn btn-white' %>
                </div>
            </div>
        </div>
    </div>
<% end %>