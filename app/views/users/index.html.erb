<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5><%=t '.table_title' %></h5>
    </div>
    <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover datatable">
            <thead>
            <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.role.humanize %></td>
                    <td>
                        <% if can?(:edit, user) %>
                            <%= link_to edit_user_path(user) do %>
                                <%= fa_icon('edit', tooltip: t('.action_edit_title')) %>
                            <% end %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>