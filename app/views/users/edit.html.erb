<%= simple_form_for(@user, as: 'user', url: user_path(@user), html: { method: :put, class: "user-form" }) do |f| %>
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <h2>Edit Profile</h2>
      <hr />
      <%= f.error_notification %>

      <div class="form-inputs m-t">
        <%= f.input :name, required: true %>

        <%= f.input :email, disabled: true %>

        <div class="form-group">
          <label class="required">Role</label>
          <div class="form-control bg-disabled">
            <%= @user.role&.titleize %>
          </div>
        </div>

        <%= f.input :username, required: true %>

        <%= f.input :employer_name, required: true %>

        <% unless @user.service_provider? %>
          <%= f.association :service_provider, collection: ServiceProvider.order(:name).pluck(:name, :id), prompt: "Choose a Service Provider", input_html: { class: "select-service-provider" } %>
        <% end %>

        <%= f.input :linkme_user, required: true %>

        <%= f.input :gord_employee, required: true %>

        <%= f.input :cgp_license, required: true %>

        <%= f.input :cgp_license_expired %>

        <%= f.input :cgp_license_expiry_date %>

        <%= f.input :cep_license %>

        <%= f.input :cep_license_expired %>

        <%= f.input :cep_license_expiry_date %>

        <%= f.input :active, required: true %>

      </div>
    </div>
  </div>

  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <% if @user.default_role? || @user.service_provider? %>
        <h2>Licences</h2>
        <hr />

        <div class="form-inputs access-licence-forms m-t">
          <%= f.simple_fields_for :access_licences do |access_licence| %>
            <%= render partial: 'access_licence_fields', locals: { f: access_licence } %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'Add Licences', f, :access_licences, class: "btn btn-primary btn-sm" %>
          </div>
        </div>

        <hr />
      <% end %>

      <div class="form-actions m-t-lg">
        <%= btn_cancel_to(user_path(@user), style: 'danger', icon: 'times') %>
        <%= btn_save %>
      </div>

      </div>
    </div>
<% end %>

