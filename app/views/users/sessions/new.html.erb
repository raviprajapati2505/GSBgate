<style>
  .radio label,
  .checkbox label {
    font-size: 80%;
    font-weight: 100;
  }

  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  input:-webkit-autofill:active {
    transition: background-color 5000s ease-in-out 0s;
    -webkit-text-fill-color: #fff !important;
  }
</style>

<div class="loginColumns">
  <div class="row new-user-content-box justify-content-center  align-items-center">
    <div class="col-md-6 col-sm-12 login-left text-md-center text-sm-center text-lg-left">
      <div class="dots justify-content-sm-center justify-content-md-center justify-content-lg-start">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>

      <%= image_tag 'layout/Logo 2.png', class: 'logo' %>
      <h2>
        CERTIFYING PROJECTS FOR
        <br />
        A LOW-CARBON FUTURE
      </h2>
    </div>

    <div class="col-md-4 col-sm-12 text-left my-4">
      <div class="d-flex justify-content-center">
        <div class="right-part">
          <!-- 
            <%= link_to "GSB Projects Certifications", "javascript:void(0);" ,class: 'text-white mb-4 d-inline-block' %> | 
            <%= link_to "Register/Manage a Project", new_registration_path(resource_name), class: 'text-white mb-4 d-inline-block' %>
          -->

          <%= link_to "Register as a CGP/CEP", new_registration_path(resource_name), class: 'text-white mb-4 d-inline-block' %> |
          <%#= link_to "Register as a Service Provider", new_service_provider_path, class: 'text-white mb-4 d-inline-block' %>

          <div class="login-right">
            <div class="title">
              <h2 class="text-blue">Login</h2>
            </div>
            <div class="form">
              <%= bootstrap_form_for(User.new, url: users_sessions_check_authentication_path) do |f| %>
              <%= f.text_field :username, prepend: content_tag(:i, '', class: "fa fa-envelope text-blue"), autofocus: true, autocomplete: 'off', placeholder: 'Username', hide_label: true %>
              <%= f.password_field :password, prepend: content_tag(:i, '', class: "fa fa-lock text-blue"), autocomplete: 'off', placeholder: 'Password', hide_label: true %>
              <div class="checkbox my-5">
                <input type="checkbox" id="optinosCheckbox1" value="">
                <label for="optinosCheckbox1" class="pl-2">Remember me</label>
              </div>
              <%= btn_tag(text: 'LOGIN', class: 'block login full-width mt-4 mb-2') %>
              <div class="d-md-none d-sm-block d-xs-block">
                <p class="my-3">New Here? Sign up and discover more</p>
                <%= link_to "Sign up as CGP/CEP", new_registration_path(resource_name),class: 'block full-width mb-2 btn bg-white text-blue'  %>
                <br />
                <%#= link_to "Sign up as Service Provider",new_service_provider_path,class: 'block full-width mb-2 btn bg-white text-blue'  %>
              </div>
              <% end %>
            </div>
            <%= render "users/shared/links" %>

            <p class="mt-5 mb-3">Powered by: </p>

            <%= image_tag 'layout/GORD & GSB Trust.png', class: 'img-responsive d-block login-banner-img mt-5 mb-3' %>

          </div>
        </div>
