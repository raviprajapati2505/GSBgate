<div class="ibox float-e-margins">
  <h2><b>Sign-Up For Service Provider</b></h2>
  <div class="ibox-content new-user-content-box">

    <%= simple_form_for(@service_provider, url: create_service_provider_path(@service_provider), html: { method: :post, class: "user-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, required: true %>

        <%= f.input :email, required: true %>

        <%= f.input :username, required: true %>

        <%= f.input :employer_name, required: true %>

        <% if devise_mapping.confirmable? && @service_provider.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= @service_provider.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= btn_cancel_to(new_user_session_path, style: 'danger', icon: 'times') %>
        <%= btn_save %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
