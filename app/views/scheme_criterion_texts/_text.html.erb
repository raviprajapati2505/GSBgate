<div class="panel panel-default" data-id="<%= criterion_text.id %>">
    <div class="panel-heading">
        <div class="subtitle"><%= criterion_text.name %></div>
    </div>
    <div class="panel-body">
        <div class="<%= criterion_text.name.downcase %>"><%= criterion_text.html_text.html_safe %></div>
    </div>
    <% if can?(:edit, criterion_text) || can?(:delete, criterion_text) %>
        <div class="panel-footer">
            <% if can?(:edit, criterion_text) %>
                <%= link_to(edit_scheme_criterion_text_path(criterion_text), :class => 'btn btn-primary') do %>
                    <%= fa_icon('edit', 'Edit') %>
                <% end %>
            <% end %>
            <% if can?(:delete, criterion_text) %>
                <%= link_to(scheme_criterion_text_path(criterion_text), method: :delete, data: {confirm: 'Are you sure to remove criterion text ?'}, :class => 'btn btn-danger') do %>
                    <%= fa_icon('trash', 'Remove') %>
                <% end %>
            <% end %>
        </div>
    <% end %>
</div>