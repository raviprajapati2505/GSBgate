<div class="modal fade" id="<%= show_certifiers ? 'addCertifierTeamMemberModal' : 'addProjectTeamMemberModal' %>">
    <div class="modal-dialog">
        <%= bootstrap_form_for([@project, @projects_user], as: :authorization, url: project_users_path(@project, @projects_user)) do |f| %>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" title="<%= t('.btn_close') %>" data-toggle="tooltip" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"><%= t '.form_title' %></h4>
                </div>
                <div class="modal-body">
                    <!--= f.select :user_id, User.without_permissions_for_project(@project).map { |k| [k.email, k.id]}, {}, { class: 'chosen-select'} %-->
                    <%= f.form_group do %>
                        <%= f.label :user_id %><br/>
                        <%= f.hidden_field :user_id, {class: 'select2-ajax', data: {project_id: @project.id}} %>
                    <% end %>
                    <% if show_certifiers %>
                        <%= f.select :role, ProjectsUser.roles.keys[3..4].map { |k| [k.humanize, k] } %>
                    <% else %>
                        <%= f.select :role, ProjectsUser.roles.keys[0..2].map { |k| [k.humanize, k] } %>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                        <%= fa_icon('save', t('.btn_save')) %>
                    <% end %>
                    <button type="button" class="btn btn-white" data-dismiss="modal">
                        <%= fa_icon('times', 'Back') %>
                    </button>
                </div>
            </div>
        <% end %>
    </div>
</div>