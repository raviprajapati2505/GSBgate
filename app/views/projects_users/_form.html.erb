<div class="modal fade" id="<%= show_certifiers ? 'addCertifierTeamMemberModal' : 'addProjectTeamMemberModal' %>" aria-hidden="true" >
    <div class="modal-dialog">
        <%= bootstrap_form_for([@project, @projects_user], as: :authorization, url: project_users_path(@project, @projects_user)) do |f| %>
            <div class="modal-content">
                <div class="modal-header">
                    <%= btn_close_modal %>
                    <h4 class="modal-title"><%= t '.form_title' %></h4>
                </div>
                <div class="modal-body">
                    <!--= f.select :user_id, User.without_permissions_for_project(@project).map { |k| [k.email, k.id]}, {}, { class: 'chosen-select'} %-->
                    <%= f.form_group do %>
                        <%= f.label :user_id %><br/>
                        <%= f.hidden_field :user_id, {class: 'select2-ajax', data: {project_id: @project.id}} %>
                    <% end %>
                    <% if show_certifiers %>
                        <%= f.select :role, ProjectsUser.roles.keys[3..4].map { |k| [k.humanize, k] } %>
                    <% else %>
                        <%= f.select :role, ProjectsUser.roles.keys[0..2].map { |k| [k.humanize, k] } %>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <%= btn_save(text: t('.btn_save')) %>
                </div>
            </div>
        <% end %>
    </div>
</div>