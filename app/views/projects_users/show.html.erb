<div class="row">
    <div class="col-md-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>User details</h5>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered table-striped" cellspacing="0" width="100%">
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td><%= @user.email %></td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td><%= @projects_user.role.humanize %></td>
                    </tr>
                    </tbody>
                </table>
                <div class="hr-line-dashed"></div>
                <% if can? :edit, @projects_user %>
                    <% if @projects_user.certifier_manager? || @projects_user.certifier? %>
                        <%= btn_link_to(edit_project_user_path(@project, @projects_user, query: 'certifiers'), icon: 'edit', text: 'Edit role') %>
                    <% else %>
                        <%= btn_link_to(edit_project_user_path(@project, @projects_user), icon: 'edit', text: 'Edit role') %>
                    <% end %>
                <% end %>
                <% if can? :destroy, @projects_user %>
                    <%= btn_link_to(project_user_path(@project, @projects_user), icon: 'user-times', text: 'Remove from team', style: 'white', method: :delete, data: {confirm: 'Are you sure to remove team member ?'}) %>
                <% end %>
                <% if can? :make_owner, @projects_user %>
                    <%= btn_link_to(make_owner_path(@project, @projects_user), icon: 'home', text: 'Make project owner', method: :post, data: {confirm: 'Are you sure to make this user the new project owner ?'}) %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <%= render 'tasks/tasks' %>
    </div>
</div>