<div class="row">
    <div class="col-md-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>User details</h5>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered table-striped">
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td><%= @user.email %></td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>
                            <% if @user.system_admin? %>
                                System admin
                            <% elsif @user.gord_manager? %>
                                GORD manager
                            <% elsif @user.gord_top_manager? %>
                                GORD top manager
                            <% else %>
                                <%= @projects_user.role.humanize %>
                            <% end %>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="hr-line-dashed"></div>
                <% if can? :edit, @projects_user %>
                    <% if @projects_user.certifier_manager? || @projects_user.certifier? %>
                        <%= link_to raw('<i title="Edit authorization" class="fa fa-lg fa-edit" style="padding-right: 10px;"></i>&nbsp;Edit role'), edit_project_user_path(@project, @projects_user, query: 'certifiers'), :class => 'btn btn-primary' %>
                    <% else %>
                        <%= link_to raw('<i title="Edit authorization" class="fa fa-lg fa-edit" style="padding-right: 10px;"></i>&nbsp;Edit role'), edit_project_user_path(@project, @projects_user), :class => 'btn btn-primary' %>
                    <% end %>
                <% end %>
                <% if can? :destroy, @projects_user %>
                    <%= link_to raw('<i title="Delete authorization" class="fa fa-lg fa-user-times" style="padding-right: 10px;"></i>&nbsp;Remove from team'), project_user_path(@project, @projects_user), method: :delete, data: {confirm: 'Are you sure to remove team member ?'}, class: 'btn btn-white' %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <%= render 'tasks/tasks' %>
    </div>
</div>