<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" title="Close" data-toggle="tooltip">
                <span>&times;</span>
            </button>
            <h4 class="modal-title">Audit log for <em><%= @auditable.name %></em></h4>
        </div>
        <div class="modal-body">
            <div class="feed-activity-list">
                <% if @audit_logs.blank? %>
                    This page has no audit logs yet.
                <% else %>
                    <% @audit_logs.each do |audit_log| %>
                        <div class="feed-element">
                            <div class="media-body">
                                <small class="text-muted">Time: <%= localize(audit_log.created_at) %> | User: <%= audit_log.user.email %></small>
                                <div class="well">
                                    <%= audit_log.system_message.html_safe %>
                                </div>
                                <% if audit_log.user_comment.present? %>
                                    <div class="well">
                                        <% # Don't make user input html_safe %>
                                        <i class="fa fa-lg fa-comment" style="margin-right: 5px;"></i>
                                        <%= audit_log.user_comment %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                    <%= will_paginate @audit_logs, renderer: BootstrapPagination::Rails %>
                <% end %>
            </div>
        </div>
    </div>
</div>
