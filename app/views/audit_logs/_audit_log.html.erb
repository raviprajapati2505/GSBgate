<div class="feed-element">
    <div class="media-body">
        <small class="text-muted">
            <i class="fa fa-clock-o" title="Date/time" style="margin: 0 2px;"></i> <%= localize(audit_log.created_at) %>
             | <i class="fa fa-user" title="User" style="margin: 0 2px"></i> <%= audit_log.user.email %> (<%= audit_log.user.humanized_project_role(audit_log.project) %>)
            <% if with_breadcrumbs %>
                | <i class="fa fa-building-o" title="Project trail" style="margin: 0 2px"></i>
                <%= render 'layouts/breadcrumb', model: audit_log.auditable %>
            <% end %>
        </small>
        <% if audit_log.system_message.present? %>
            <div class="well system-message">
                <%= audit_log.system_message.html_safe %>
            </div>
        <% end %>
        <% if audit_log.user_comment.present? %>
            <div class="well <% if audit_log.user.assessor? %>user-comment-project-team<% else %>user-comment-gord-team<%end %>">
                <% # Don't make user input html_safe %>
                <i class="fa fa-comment" title="User comment" style="margin-right: 2px;"></i> <%= audit_log.user_comment %>
            </div>
        <% end %>
    </div>
</div>