<div class="ibox float-e-margins">
    <div class="ibox-content">
      <h2><%= t('survey_response.new.title' ) %></h2>
        <%= bootstrap_form_for(@survey_response, url: submit_survey_responses_path(@project_survey), method: 'post', html: { multipart: true }) do |f| %>
            <div class="form-inputs">
              <div class="row">
                  <div class="col-lg-12">
                    <%= f.text_field :name %>
                  </div>
                  <div class="col-lg-12">
                    <%= f.text_field :email %>
                  </div>

                  <% @survey_questions.each do |question| %>
                    <div class="nested-fields">
                      <%= f.fields_for :question_responses, QuestionResponse.new do |response_field| %>
                        <%= render partial: 'survey_questions', locals: { question_response: response_field, q: question } %>
                      <% end %>
                    </div>
                  <% end %>

                  <div class="col-lg-12">
                      <%= btn_link_to(:back, icon: 'backward', text: 'Back') %>
                      <%= btn_save %>
                  </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
<%= javascript_include_tag 'survey_checkbox_single_value' %>
