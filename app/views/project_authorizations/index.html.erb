<div class="wrapper wrapper-content animated">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listing project authorizations</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Member</th>
                            <th>Permission</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @project_authorizations.each do |authorization| %>
                            <tr>
                                <td><%= authorization.user.email %></td>
                                <td><%= authorization.permission %></td>
                                <td>
                                    <% unless authorization.manage? %>
                                    <%= authorization.category.name %>
                                    <% end %>
                                </td>
                                <td>
                                    <%= link_to raw('<i title="Edit" class="fa fa-edit" style="padding-right: 10px;"></i>'), edit_project_project_authorization_path(@project, authorization) %>
                                    <%= link_to raw('<i title="Delete" class="fa fa-trash" style="padding-right: 10px;"></i>'), project_project_authorization_path(@project, authorization), method: :delete, data: {confirm: 'Are you sure?'} %>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                    <%= link_to 'New Project Authorization', new_project_project_authorization_path, class: 'btn btn-sm btn-primary' %>
                </div>
            </div>
        </div>
    </div>
</div>