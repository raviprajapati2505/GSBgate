<div class="nested-fields">
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <div class="text-right">
        <%= link_to_remove_association "X", f, class: "btn btn-danger m-r-md m-t" %>
      </div>

      <div class="form-inputs">
        <div class="p-m survey-questions-fields">
          <%= f.text_field :question_text %>

          <%= f.text_area :description %>

          <%= f.select :question_type, options_for_select(SurveyQuestion.question_types.map {|k ,v| [v, k]}, f.object.question_type), { label: 'Choose Format', include_blank: '- There is no format selected -' } %>

          <%= f.check_box :mandatory, require: true %>

          <div class="form-inputs access-licence-forms row m-b-xl">
            <%= f.fields_for :question_options do |question_option| %>
              <%= render partial: 'question_option_fields', locals: { f: question_option } %>
            <% end %>

            <div class="links">
              <%= link_to_add_association 'Add Option', f, :question_options, class: "btn btn-primary btn-sm nested-fields-links", id: "add-option-button" %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
