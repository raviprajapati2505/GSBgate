<% if resource.errors.messages[:reset_password_token].present? %>
    <p class="alert alert-danger">
        The reset password token <%= resource.errors.messages[:reset_password_token].first %>.
    </p>
<% end %>
<div class="ibox-content">
    <%= image_tag 'layout/logo-medium.gif' %>

    <h3>Change your password</h3>

    <% if @minimum_password_length %>
        <p>Your new password should be<br />at least <%= @minimum_password_length %>&nbsp;characters long.</p>
    <% end %>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <%= f.password_field :password, autofocus: true, placeholder: 'New password', hide_label: true, autocomplete: 'off' %>
        <%= f.password_field :password_confirmation, placeholder: 'Confirm new password', hide_label: true, autocomplete: 'off' %>
        <%= btn_tag(text: 'Change password', class: 'block full-width m-b') %>
    <% end %>

    <small>
        <%= render 'devise/shared/links' %>
    </small>
</div>