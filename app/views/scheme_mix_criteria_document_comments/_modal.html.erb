<div class="modal fade" id="createSchemeMixCriteriaDocumentCommentModal">
    <div class="modal-dialog">
        <%= bootstrap_form_for([project, certification_path, scheme_mix, scheme_mix_criterion, scheme_mix_criteria_document, scheme_mix_criteria_document_comment]) do |f| %>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" title="Close" data-toggle="tooltip">
                        <span>&times;</span>
                    </button>
                    <h4 class="modal-title">Add comment</h4>
                </div>
                <div class="modal-body">
                    <%= f.text_area :body, rows: 10 %>
                </div>
                <div class="modal-footer">
                    <%= f.primary 'Save' %>
                    <button type="button" class="btn btn-white" data-dismiss="modal">Back</button>
                </div>
            </div>
        <% end %>
    </div>
</div>