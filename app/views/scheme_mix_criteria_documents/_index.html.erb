<% if scheme_mix_criteria_documents.empty? %>
    No documentation was uploaded yet.
<% else %>
    <table class="table table-striped table-bordered table-hover datatable">
        <thead>
        <tr>
            <th>File name</th>
            <th>Uploaded by</th>
            <th>Upload date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% scheme_mix_criteria_documents.each do |smcd| %>
            <tr>
                <td data-order="<%= smcd.document.document_file.file.filename %>" data-search="<%= smcd.document.document_file.file.filename %>">
                    <%= image_tag(Icon.for_filename(smcd.document.document_file.file.filename), alt: smcd.document.document_file.content_type, title: smcd.document.document_file.content_type) + ' ' + link_to(smcd.document.document_file.file.filename, edit_project_certification_path_scheme_mix_scheme_mix_criterion_scheme_mix_criteria_document_path(smcd.scheme_mix_criterion.scheme_mix.certification_path.project, smcd.scheme_mix_criterion.scheme_mix.certification_path, smcd.scheme_mix_criterion.scheme_mix, smcd.scheme_mix_criterion, smcd), title: 'Click to view the document details') %>
                </td>
                <td><%= smcd.document.user.email %></td>
                <td><%= localize(smcd.document.created_at) %></td>
                <td><%= smcd.status.humanize %></td>
                <td>
                    <%= link_to raw('<i title="Document details" class="fa fa-lg fa-search" style="padding-right: 10px;"></i>'), edit_project_certification_path_scheme_mix_scheme_mix_criterion_scheme_mix_criteria_document_path(smcd.scheme_mix_criterion.scheme_mix.certification_path.project, smcd.scheme_mix_criterion.scheme_mix.certification_path, smcd.scheme_mix_criterion.scheme_mix, smcd.scheme_mix_criterion, smcd) %>
                    <%= link_to raw('<i title="Download document" class="fa fa-lg fa-download" style="padding-right: 10px;"></i>'), smcd.document %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end %>