<% targetted ||=false %>
<% achieved ||= false %>
<% submitted ||= false %>

<% rating = certification_path.label_for_level(certificate: certificate, is_targetted_score: targetted, is_achieved_score: achieved, is_submitted_score: submitted) %>
<div style="line-height:24px; <% if achieved %>font-weight:bold;<% end %>">
    <span class="text-right" style="width: 72px; display: inline-block;">
        <%= score_label %>
    </span>
    <span>
      &nbsp;&nbsp;=&nbsp;&nbsp;
    </span>
    <% if rating.is_a? String %>
      <span class="label label-rating label-rating-<%= rating.downcase.gsub(/( )/, '-') %>"><%= rating %></span>
    <% end %>
</div>