<% scores = certification_path.scores_in_certificate_points %>
<% if not certification_path.is_activating? %>
    <%= render partial: 'certification_paths/star_rating_item', locals: {score_label: 'Targeted', score: scores[:targeted_score_in_certificate_points], certificate: certification_path.certificate} %>
    <%= render partial: 'certification_paths/star_rating_item', locals: {score_label: 'Submitted', score: scores[:submitted_score_in_certificate_points], certificate: certification_path.certificate} %>
<% else %>
    ---
<% end %>
<% if not certification_path.in_pre_verification? %>
    <% if !certification_path.in_verification? || !current_user.default_role? || certification_path.project.role_for_user(current_user) == ProjectsUser.roles.keys[ProjectsUser.roles[:certifier]] || certification_path.project.role_for_user(current_user) == ProjectsUser.roles.keys[ProjectsUser.roles[:certification_manager]] %>
    <%= render partial: 'certification_paths/star_rating_item', locals: {score_label: 'Achieved', score: scores[:achieved_score_in_certificate_points], achieved: true, certificate: certification_path.certificate} %>
<% end %>
<% end %>