<div class="modal fade" id="appealModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <%= bootstrap_form_for([@project, @certification_path], url: update_certification_path_status_path, method: 'put') do |f| %>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" title="Close" data-toggle="tooltip">
                        <span>&times;</span>
                    </button>
                    <h4 class="modal-title">Applying for appeal</h4>
                </div>
                <div class="modal-body">
                    <%= f.hidden_field :appealed, value: true %>
                    <%= f.text_area :audit_log_user_comment, label: 'Comment', rows: 4 %>
                </div>
                <div class="modal-footer">
                    <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                        <i class="fa fa-lg fa-hand-o-up" style="padding-right: 10px;"></i>Apply for appeal
                    <% end %>
                    <button type="button" class="btn btn-white" data-dismiss="modal"><i title="Cancel" class="fa fa-lg fa-times" style="padding-right: 10px;"></i>Cancel</button>
                </div>
            <% end %>
        </div>
    </div>
</div>
