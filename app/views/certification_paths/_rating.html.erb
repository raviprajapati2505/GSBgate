<% unless rec.certification_path_status_is_active %>
  <!-- Check if project has certificate -->
  <% unless rec.certification_path_id.nil? %>
  <% certificate_path = CertificationPath.find(rec.certification_path_id) %>
    <% if certificate_path.is_checklist_method? %>
      <% rating = certificate_path.label_for_level(certificate: certificate_path.certificate) %>
    <% else %>
      <% rating = certificate_path.rating_for_score(rec.total_achieved_score, certificate: certificate_path.certificate, certificate_gsas_version: rec.certificate_gsas_version, certificate_name: rec.certificate_name) %>
    <% end %>
  <% else %>
  <% rating = -1 %>
  <% end %>
  <% if rating.is_a? String %>
    <!-- TEXTUAL SCORE -->
    <span class="label label-rating label-rating-<%= rating.downcase.gsub(/( )/, '-') %>"><%= rating %></span>
  <% else %>
    <!-- STAR SCORE -->
    <% rating.times do %>
      <i class="fa fa-star fa-lg"><span style="display:none;">*</span></i>
    <% end %>
  <% end %>
<% end %>
