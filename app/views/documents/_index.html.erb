<% if documents.empty? %>
    No documentation was uploaded yet.
<% else %>
    <table class="table table-striped table-bordered table-hover datatable">
        <thead>
        <tr>
            <th>File name</th>
            <th>File size</th>
            <th>Uploaded by</th>
            <th>Upload date</th>
        </tr>
        </thead>
        <tbody>
        <% documents.each do |d| %>
            <tr>
                <td data-order="<%= d.document_file.file.filename %>" data-search="<%= d.document_file.file.filename %>">
                    <%= image_tag(Icon.for_filename(d.document_file.file.filename), alt: d.document_file.content_type, title: d.document_file.content_type) + ' ' + link_to(d.document_file.file.filename, download_document_path(d), title: 'Click here to download the document') %>
                </td>
                <td data-order="<%= d.document_file.size %>"><%= number_to_human_size(d.document_file.size) %></td>
                <td><%= d.user.email %></td>
                <td><%= localize(d.created_at) %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end %>