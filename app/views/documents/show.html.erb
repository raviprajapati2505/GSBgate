<div class="row">
<div class="col-md-5">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Document details</h5>
        </div>
        <div class="ibox-content">
            <table class="table table-bordered table-striped">
                <tbody>
                <tr>
                    <th>File name</th>
                    <td><%= image_tag(Icon.for_filename(@document.document_file.file.filename), alt: @document.document_file.content_type, title: @document.document_file.content_type) + ' ' + link_to(@document.document_file.file.filename, download_project_document_path(@project, @document), title: 'Click to download the document') %></td>
                </tr>
                <tr>
                    <th>File size</th>
                    <td><%= number_to_human_size(@document.document_file.size) %></td>
                </tr>
                <tr>
                    <th>Uploaded by</th>
                    <td> <%= @document.user.email %></td>
                </tr>
                <tr>
                    <th>Upload date</th>
                    <td><%= localize(@document.created_at) %></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>TODO</td>
                </tr>
                </tbody>
            </table>
            <div class="hr-line-dashed"></div>
            <%= link_to('Download document', download_project_document_path(@project, @document), class: 'btn btn-primary') %>
        </div>
    </div>
</div>
<div class="col-md-7">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Comments</h5>
        </div>
        <div class="ibox-content">
            <% if @document.document_comments.empty? %>
                This document has no comments.
            <% else %>
                <% @document.document_comments.each do |document_comment| %>
                    <div class="feed-element">
                        <div class="media-body">
                            <strong><%= document_comment.user.email %></strong> commented on <strong><%= localize(document_comment.created_at) %></strong>
                            <div class="well">
                                <%= document_comment.body %>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
            <div class="hr-line-dashed"></div>
            <%= link_to('Add comment', download_project_document_path(@project, @document), class: 'btn btn-primary') %>
        </div>
    </div>
</div>
</div>