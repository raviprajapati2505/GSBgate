<div class="wrapper wrapper-content animated">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listing projects</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Country</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @projects.each do |project| %>
                            <tr>
                                <td><%= project.name %></td>
                                <td><%= project.description %></td>
                                <td><%= project.country %></td>
                                <td>
                                    <%= link_to raw('<i title="Show" class="fa fa-search" style="padding-right: 10px;"></i>'), project %>
                                    <% if can? :edit, project %>
                                    <%= link_to raw('<i title="Edit" class="fa fa-edit" style="padding-right: 10px;"></i>'), edit_project_path(project) %>
                                    <% end %>
                                    <% if can? :destroy, project %>
                                    <%= link_to raw('<i title="Delete" class="fa fa-trash" style="padding-right: 10px;"></i>'), project, method: :delete, data: {confirm: 'Are you sure?'} %>
                                    <% end %>
                                    <% if can? :manage, project %>
                                    <%= link_to raw('<i title="Team" class="fa fa-users" style="padding-right: 10px;"></i>'), project_project_authorizations_path(project) %>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>

                    <br>

                    <%= link_to 'New Project', new_project_path, class: 'btn btn-sm btn-primary' %>
                </div>
            </div>
        </div>
    </div>
</div>
