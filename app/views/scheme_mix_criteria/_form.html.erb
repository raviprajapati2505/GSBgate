<div class="row">
    <div class="col-lg-6">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Criterion details</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        ...
                    </div>
                </div>
            </div>
        </div>
        <div class="ibox">
            <div class="ibox-title">
                <h5>Score</h5>
            </div>
            <div class="ibox-content">
                <%= bootstrap_form_for([@project, @certification_path, @scheme_mix, @scheme_mix_criterion], url: project_certification_path_scheme_mix_scheme_mix_criterion_path) do |f| %>
                    <% if @scheme_mix_criterion.errors.any? %>
                        <div id="error_explanation">
                            <h2><%= pluralize(@scheme_mix_criterion.errors.count, "error") %> prohibited this criterion from being saved:</h2>
                            <ul>
                                <% @scheme_mix_criterion.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                    <div class="row">
                        <div class="col-md-3">
                            <% if can? :manage, @scheme_mix_criterion %>
                                <%= f.select :targeted_score, @scheme_mix_criterion.scheme_criterion.scores.map { |k| [k.score, k.score]} %>
                            <% else %>
                                <%= f.static_control :targeted_score %>
                            <% end %>
                        </div>
                        <div class="col-md-3">
                            <%= f.static_control :submitted_score %>
                        </div>
                        <div class="col-md-3">
                            <% if can? :manage, @scheme_mix_criterion %>
                                <%= f.select :achieved_score, @scheme_mix_criterion.scheme_criterion.scores.map { |k| [k.score, k.score]}, {include_blank: 'Unclassified'}, disabled: true %>
                            <% else %>
                                <% if @scheme_mix_criterion.certifier.id == current_user.id %>
                                    <%= f.select :achieved_score, @scheme_mix_criterion.scheme_criterion.scores.map { |k| [k.score, k.score]}, {include_blank: 'Unclassified'} %>
                                <% else %>
                                    <%= f.static_control :achieved_score %>
                                <% end %>
                            <% end %>
                        </div>
                        <div class="col-md-3">
                            <%= f.static_control :status, help: false %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="hr-line-dashed"></div>
                            <% if can? :manage, @scheme_mix_criterion %>
                                <%= f.primary 'Save' %>
                                <button type="button" class="btn btn-white" data-toggle="modal" data-target="#updateCriterionStatusModal">Update status</button>
                            <% end %>
                            <%= link_to 'Show status log', project_certification_path_scheme_mix_scheme_mix_criterion_status_logs_path(@project, @certification_path, @scheme_mix, @scheme_mix_criterion), remote: true, class: 'btn btn-white' %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="ibox">
            <div class="ibox-title">
                <h5>Requirements</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        <div id="accordion" class="panel-group">
                            <%= render "requirements/form", scheme_mix_criterion: @scheme_mix_criterion %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Documents</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <%= bootstrap_form_for(Document.new) do |f| %>
                                    <div class="well well-sm">
                                        <%= f.file_field :document_file, multiple: true, label: 'Upload documentation' %>
                                        <%= f.hidden_field :scheme_mix_criterion, value: @scheme_mix_criterion.id %>
                                        <%= f.primary 'Upload' %>
                                    </div>
                                <% end %>
                                <% if @scheme_mix_criterion.documents.any? %>
                                    <table class="table table-striped table-bordered table-hover datatable">
                                        <thead>
                                        <tr>
                                            <th>File name</th>
                                            <th>Upload date</th>
                                            <th>Uploaded by</th>
                                            <th>File size</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% @scheme_mix_criterion.documents.each do |d| %>
                                            <tr>
                                                <td data-order="<%= d.document_file.file.filename %>" data-search="<%= d.document_file.file.filename %>">
                                                    <%= image_tag(Icon.for_filename(d.document_file.file.filename), alt: d.document_file.content_type, title: d.document_file.content_type) + ' ' + link_to(d.document_file.file.filename, download_document_path(d)) %>
                                                </td>
                                                <td><%= d.created_at %></td>
                                                <td><%= d.user.email %></td>
                                                <td data-order="<%= d.document_file.size %>"><%= number_to_human_size(d.document_file.size) %></td>
                                                <!--<td>Path: <%= d.document_file.path %></td>-->
                                            </tr>
                                        <% end %>
                                        </tbody>
                                    </table>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% if can? :manage, @scheme_mix_criterion %>
<%= render 'modal', project: @project, certification_path: @certification_path, scheme_mix: @scheme_mix, scheme_mix_criterion: @scheme_mix_criterion %>
<% end %>
<div id="showCriteriaStatusLogsModal" class="modal fade"></div>
