<div class="row">

  <div class="col-md-12 m-t">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <div class='row'>
          <div class="col-md-10">
            <h2><b><%= "Questions of #{@projects_survey.survey_type.title}" %></b></h2>
            <h3>Total Questions: <%= @latest_questions.count rescue 0 %></h3>
          </div>
          <div class="col-md-2">
            
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="ibox float-e-margins">
      <% @latest_questions.each.with_index(1) do |question, i| %>
        <div class="ibox-title m-t">
          <h3 class="m"><%= "Que-#{i}:" %>
          <h4 class="p-m"><%= question.question_text %></h4>
        </div>

        <div class="ibox-content">
          <table class="table table-bordered table-striped">
            <tbody>
              <tr>
                <th class="col-md-4"><%=SurveyQuestion.human_attribute_name('description') %></th>
                <td><%= question.description %></td>
              </tr>
            </tbody>
          </table>

          <table class="table table-bordered table-striped user-details-table">
            <thead>
              <tr>
                <th>Results</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="p-md">
                  <% if question.question_type == 'single_select' || question.question_type == 'multi_select' %>
                    <% 
                      option_with_counts = survey_question_options_report(@projects_survey, question)
                      total_responses = @projects_survey.survey_responses.count
                      option_counter = 1
                    %>
                    <% option_with_counts.each do |key, value| %>
                      <p><%= "#{option_counter}) #{key} (#{value} Out of #{total_responses})" %></p>
                      <% option_counter = option_counter + 1 %>
                    <% end %>
                  <% else %>
                    <span class="show_text_responses" data-survey_question_id="<%= question.id %>">Click Here To Show the Text responses</span>
                    <%# question.question_responses.each do |text| %>
                     
                    <%# end %>
                  <% end %>
                </td>
                <th>Graphical Representation</th>
              </tr>
            </tbody>
          </table>

        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-12">
    <%= btn_link_to(:back, icon: 'backward', text: 'Back') %>
  </div>
</div>

<div class="modal fade" id="survey_text_response_model">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <%= btn_close_modal %>
                <h4 class="modal-title">Text Responses</h4>
            </div>
            <div class="modal-body">
              <div class="content">
              </div>
            </div>
            <div class="modal-footer">
                <%= btn_tag(text: t('.btn_cancel'), style: 'white', data: {dismiss: 'modal'}) %>
            </div>
        </div>
    </div>
</div>