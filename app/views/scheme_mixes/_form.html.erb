<%= bootstrap_form_for([@project, @scheme_mix.certification_path, @scheme_mix]) do |f| %>
    <% if @scheme_mix.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@scheme_mix.errors.count, "error") %> prohibited this scheme_mix from being saved:</h2>

            <ul>
                <% @scheme_mix.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col-md-6">
            <%= f.collection_select :scheme_id, Scheme.all, :id, :label, {:include_blank => 'Make your choice...'} %>
            <%= f.text_field :weight %>
            <%= f.primary %>
            <%= link_to 'Back', certification_path_path(@scheme_mix.certification_path), class: 'btn btn-white' %>
        </div>
    </div>
<% end %>
