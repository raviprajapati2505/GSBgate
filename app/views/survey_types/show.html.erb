<div class="row">

  <div class="col-md-12 m-t">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <div class='row'>
          <div class="col-md-10">
            <h2><b><%= "Questions of #{@survey_type.title}" %></b></h2>
            <h3>Total Questions: <%= @latest_questions.count rescue 0 %></h3>
          </div>
          <div class="col-md-2">
            <div class="m-t">
              <%= btn_link_to(form_survey_type_survey_questionnaire_versions_path(@survey_type), icon: 'edit', text: 'Edit Questions') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div id="accordion" class="panel-group">
      <div class="sortable-survey-questions" data-survey-type-id="<%= @survey_type.id %>" data-model="SurveyQuestion">
        <%= render partial: 'survey_questions_list', locals: { latest_questions: @latest_questions } %>
      </div>
    </div>
  </div>
</div>

<div id="toast-message"></div>
